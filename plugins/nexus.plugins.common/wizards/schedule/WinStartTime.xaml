<?xml version="1.0" encoding="utf-8"?>
<controls:NxPanelBase
    x:Class="nexus.plugins.common.WinStartTime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:nexus.common.control">


    <Grid Width="300" Height="600" >

        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:NxCheck x:Name="chkNone" Prompt="No Start Time, will start at begining of day" IsSelected="True" Grid.Row="0" PromptWidth="250"  />

        <StackPanel Orientation="Horizontal" Grid.Row="1"  >
            <controls:NxLabel Prompt="Select start time:" PromptWidth="70" />
            <controls:NxLabel x:Name="Result"  Prompt="" PromptFontSize="18"  />
        </StackPanel>

        <controls:NxTime x:Name="tpStart" Width="300" HorizontalAlignment="Left" Grid.Row="2" ShowButtons="False" />

    </Grid>

</controls:NxPanelBase>
