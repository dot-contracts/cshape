<?xml version="1.0" encoding="utf-8"?>
<controls:NxPanelBase
    x:Class="nexus.plugins.common.WinInterval"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:nexus.common.control">

    <Grid Width="300" Height="600" >
        <StackPanel Padding="20" Spacing="16">

            <StackPanel Orientation="Horizontal" Spacing="10">
                <controls:NxLabel Prompt="Interval:" />
                <controls:NxText x:Name="txtInterval" Width="80" />
                <controls:NxLabel Prompt="minutes" />
            </StackPanel>
        </StackPanel>
    </Grid>

</controls:NxPanelBase>
