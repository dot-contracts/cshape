<?xml version="1.0" encoding="utf-8"?>
<controls:NxPanelBase 
    x:Class="nexus.plugins.common.WinDays"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:nexus.common.control">

    <Grid Width="300" Height="600" >

        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:NxCheck x:Name="chkNone" Prompt="Runs all Week, no selection required" IsSelected="True" Grid.Row="0"  PromptWidth="250"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1"  >
            <controls:NxLabel Prompt="Select Days: " PromptWidth="70" />
            <controls:NxLabel x:Name="Result"  Prompt="" PromptFontSize="18" />
        </StackPanel>


        <Grid x:Name="Selection" Grid.Row="2" >

                <Grid.RowDefinitions>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <controls:NxCheck x:Name="chkSun" Prompt="Sunday"    Grid.Row="3" Grid.Column="0"/>
                <controls:NxCheck x:Name="chkMon" Prompt="Monday"    Grid.Row="3" Grid.Column="1" />
                <controls:NxCheck x:Name="chkTue" Prompt="Tuesday"   Grid.Row="3" Grid.Column="2"/>
                <controls:NxCheck x:Name="chkWed" Prompt="Wednesday" Grid.Row="4" Grid.Column="0"/>
                <controls:NxCheck x:Name="chkThu" Prompt="Thursday"  Grid.Row="4" Grid.Column="1" />
                <controls:NxCheck x:Name="chkFri" Prompt="Friday"    Grid.Row="4" Grid.Column="2" />
                <controls:NxCheck x:Name="chkSat" Prompt="Saturday"  Grid.Row="5" Grid.Column="0" />

            </Grid>


    </Grid>

</controls:NxPanelBase>
