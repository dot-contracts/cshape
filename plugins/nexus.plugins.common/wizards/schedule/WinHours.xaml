<?xml version="1.0" encoding="utf-8"?>
<controls:NxPanelBase
    x:Class="nexus.plugins.common.WinHours"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:nexus.common.control">

    <Grid Width="300" Height="600" >


            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <controls:NxCheck x:Name="chkNone" Prompt="Runs all Day, no selection required" IsSelected="True" Grid.Row="0" PromptWidth="200"  />

            <StackPanel Orientation="Horizontal" Grid.Row="1"  >
                <controls:NxLabel Prompt="Select Hours: "  PromptWidth="70"/>
            <controls:NxLabel x:Name="Result"  Prompt=""  PromptFontSize="18" />
            </StackPanel>

            <Grid x:Name="Selection" Grid.Row="2" >
                <Grid.RowDefinitions>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30"/>
                   <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>

                <!-- First Row -->
                <controls:NxCheck x:Name="chk01" Prompt="01" Grid.Row="3" Grid.Column="0"/>
                <controls:NxCheck x:Name="chk02" Prompt="02" Grid.Row="3" Grid.Column="1"/>
                <controls:NxCheck x:Name="chk03" Prompt="03" Grid.Row="3" Grid.Column="2"/>
                <controls:NxCheck x:Name="chk04" Prompt="04" Grid.Row="3" Grid.Column="3"/>
                <controls:NxCheck x:Name="chk05" Prompt="05" Grid.Row="3" Grid.Column="4"/>
                <controls:NxCheck x:Name="chk06" Prompt="06" Grid.Row="3" Grid.Column="5"/>

                <!-- Second Row -->
                <controls:NxCheck x:Name="chk07" Prompt="07" Grid.Row="4" Grid.Column="0"/>
                <controls:NxCheck x:Name="chk08" Prompt="08" Grid.Row="4" Grid.Column="1"/>
                <controls:NxCheck x:Name="chk09" Prompt="09" Grid.Row="4" Grid.Column="2"/>
                <controls:NxCheck x:Name="chk10" Prompt="10" Grid.Row="4" Grid.Column="3"/>
                <controls:NxCheck x:Name="chk11" Prompt="11" Grid.Row="4" Grid.Column="4"/>
                <controls:NxCheck x:Name="chk12" Prompt="12" Grid.Row="4" Grid.Column="5"/>

                <!-- Third Row -->
                <controls:NxCheck x:Name="chk13" Prompt="13" Grid.Row="5" Grid.Column="0"/>
                <controls:NxCheck x:Name="chk14" Prompt="14" Grid.Row="5" Grid.Column="1"/>
                <controls:NxCheck x:Name="chk15" Prompt="15" Grid.Row="5" Grid.Column="2"/>
                <controls:NxCheck x:Name="chk16" Prompt="16" Grid.Row="5" Grid.Column="3"/>
                <controls:NxCheck x:Name="chk17" Prompt="17" Grid.Row="5" Grid.Column="4"/>
                <controls:NxCheck x:Name="chk18" Prompt="18" Grid.Row="5" Grid.Column="5"/>

                <!-- Fourth Row -->
                <controls:NxCheck x:Name="chk19" Prompt="19" Grid.Row="6" Grid.Column="0"/>
                <controls:NxCheck x:Name="chk20" Prompt="20" Grid.Row="6" Grid.Column="1"/>
                <controls:NxCheck x:Name="chk21" Prompt="21" Grid.Row="6" Grid.Column="2"/>
                <controls:NxCheck x:Name="chk22" Prompt="22" Grid.Row="6" Grid.Column="3"/>
                <controls:NxCheck x:Name="chk23" Prompt="23" Grid.Row="6" Grid.Column="4"/>
                <controls:NxCheck x:Name="chk24" Prompt="24" Grid.Row="6" Grid.Column="5"/>
            </Grid>


    </Grid>
</controls:NxPanelBase>
