<?xml version="1.0" encoding="utf-8"?>
<controls:NxPanelBase
    x:Class="nexus.plugins.common.WinFinishDate"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:nexus.common.control">

    <Grid Width="300" Height="600" >
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:NxCheck x:Name="chkNoEnd" Prompt="Never Ends, no Finish date required" PromptWidth="200" Grid.Row="0" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" >
            <controls:NxLabel Prompt="Select Finish Date:"  PromptWidth="70" />
            <controls:NxLabel x:Name="Result"  Prompt=""  PromptFontSize="18"/>
        </StackPanel>

        <controls:NxCalendar x:Name="dpFinish" Grid.Row="2" VerticalAlignment="Top" />
    </Grid>

</controls:NxPanelBase>
