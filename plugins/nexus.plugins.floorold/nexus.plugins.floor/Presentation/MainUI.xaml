<my:NxMainUIBase

      x:Class="nexus.plugins.floor.MainUI"
    
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:nexus.plugins.floor"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      xmlns:my="using:nexus.common.control.uno" 
      Background="{ThemeResource BackgroundBrush}"


    >
    
  <ScrollViewer IsTabStop="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />   <!-- Left panel -->
                <ColumnDefinition Width="*" />      <!-- Right panel -->
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Stretch" x:Name="Search"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>   <!-- Search row -->
                    <RowDefinition Height="Auto"/>   <!-- Numpad -->
                    <RowDefinition Height="*"/>      <!-- ResList takes remaining space -->
                </Grid.RowDefinitions>

                <!-- Search Controls -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Spacing="0" Height="40">
                    <my:NxLabel Prompt="Search:" Height="40"  VerticalAlignment="Center" />
                    <my:NxCheck x:Name="ckHouse" Tag="HouseNo"  Prompt="House" VerticalAlignment="Top" Width="70"  Height="40" />
                    <my:NxCheck x:Name="ckBadge" Tag="BadgeNo"  Prompt="Badge" VerticalAlignment="Top" Width="70"  Height="40" />
                </StackPanel>

                <!-- NumPad -->
                <my:NxNumPad x:Name="NumPad" AllowDecimal="False" AllowNegative="False" ShowOKButton="False" ButtonHeight="60" ButtonWidth="60"  Grid.Row="1"  IsTouchMode="True"   />

                <!-- ResList fills remaining space -->
                <Grid Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  >
                    <my:NxTabData x:Name="ResList" PageSize="10" RowHeight="45"   />
                </Grid>
            </Grid>
            
            <!-- Right-side Results Panel -->
            <Grid Grid.Column="1" Margin="20" x:Name="Host" Visibility="Visible" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />

        </Grid>

    </ScrollViewer>

</my:NxMainUIBase>
