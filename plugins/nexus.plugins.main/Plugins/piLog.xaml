<my:NxPluginBase

    x:Class="nexus.plugins.main.piLog" 
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

    xmlns:my="using:nexus.common.control" 
   
    mc:Ignorable="d" d:DesignWidth="648.286" d:DesignHeight="370.286">
    <Grid  x:Name="Panel" >
        <my:NxButton x:Name="btUpdate" Prompt="Update" HorizontalAlignment="Right" Width="95" Height="23" VerticalAlignment="Top"/>
        <my:NxList x:Name="LogGrid" Margin="0,74,0,0"/>
        <my:NxTextEdit x:Name="txVersion" Height="23" PromptTextWrapping="Wrap" VerticalAlignment="Top" ReplyForeColor="Black" Prompt="Version" PromptForeColor="White" Margin="0,0,100,0" HorizontalAlignment="Right" Width="231"/>
        <my:NxTextEdit x:Name="txVenue" HorizontalAlignment="Left" Height="23" PromptTextWrapping="Wrap" VerticalAlignment="Top" Width="300" ReplyForeColor="Black" Prompt="Venue" PromptForeColor="White"/>
        <my:NxTextEdit x:Name="txLocation" HorizontalAlignment="Left" Height="23" PromptTextWrapping="Wrap" VerticalAlignment="Top" Width="300" ReplyForeColor="Black" Prompt="Location" PromptForeColor="White" Margin="0,24,0,0"/>
        <Pivot x:Name="Tabs" Margin="0,47,0,0" Height="25" VerticalAlignment="Top">
            <PivotItem Header="Events">
                <Grid Background="#FFE5E5E5"/>
            </PivotItem>
            <PivotItem Header="Logs">
                <Grid Background="#FFE5E5E5"/>
            </PivotItem>
        </Pivot>
    </Grid>


</my:NxPluginBase>
