<my:NxGroupBase

    x:Class="nexus.plugins.promo.GameDraw" 
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

    xmlns:my="using:nexus.common.control"
    xmlns:pc="using:nexus.plugins.common"
   
    mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid x:Name="Panel" Margin="0" Width="400" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  >

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <my:NxButton    x:Name="btDraw" Prompt="Draw Member:"  Width="400"  HorizontalAlignment="Left" BorderType="OK" Grid.Row="14"     /> "

                <StackPanel  x:Name="Stacker" Width="400"  />

            </Grid>
        </ScrollViewer>
    </Grid>
       


</my:NxGroupBase>
