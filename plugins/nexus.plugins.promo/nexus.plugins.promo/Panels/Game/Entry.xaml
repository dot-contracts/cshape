<UserControl
    
    x:Class="nexus.plugins.promo.Ticket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:nx="using:nexus.common.control"
    MinWidth="150"
    MinHeight="90"

    >

    <Border
        Background="{Binding Background, RelativeSource={RelativeSource Mode=Self}}"
        CornerRadius="8"
        BorderBrush="DarkGray"
        BorderThickness="1"
        Padding="8">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Member & House -->
            <StackPanel Grid.Column="0" Spacing="4" VerticalAlignment="Center">
                <nx:NxLabel x:Name="lbMember" FontSize="14" FontWeight="Bold"/>
                <nx:NxLabel x:Name="lbHouse" FontSize="12" Foreground="DarkGreen"/>
            </StackPanel>

            <!-- Right: Entries -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <nx:NxLabel x:Name="lbEntries" FontSize="24" FontWeight="Bold" Foreground="DarkRed"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
