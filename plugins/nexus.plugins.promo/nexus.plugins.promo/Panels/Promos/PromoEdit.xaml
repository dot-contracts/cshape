<my:NxGroupBase

    x:Class="nexus.plugins.promo.PromoEdit" 
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

    xmlns:my="using:nexus.common.control"
    xmlns:pc="using:nexus.plugins.common"
   
    mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid x:Name="Panel" Margin="0" Width="400" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  >

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <my:NxTextEdit  x:Name="txDescription"   Prompt="Description:"   Width="Auto" HorizontalAlignment="Stretch"   PromptWidth="110"  Grid.Row="0"   /> "
                <my:NxComboEdit x:Name="cbPromoType"     Prompt="Promo Type:"    Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="1" DropType="List" /> "
                <my:NxComboEdit x:Name="cbPromoState"    Prompt="Promo State:"   Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="2" DropType="List"  /> "
                <my:NxComboEdit x:Name="cbTrigger"       Prompt="Trigger Type:"  Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="3" DropType="List" /> "
                <my:NxComboEdit x:Name="cbAction"        Prompt="Action Type:"   Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="4" DropType="List"  /> "
                <my:NxTextEdit  x:Name="txGameTimeout"   Prompt="Game TimeOut:"  Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="6"   /> "
                <my:NxTextEdit  x:Name="txMaxDraws"      Prompt="Max Draw:"      Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="7"   /> "
                <my:NxCheck     x:Name="ckAutoDraw"      Prompt="Auto Draw:"     Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="8"   /> "
                <my:NxTextEdit  x:Name="txInterval"      Prompt="Draw Interval:" Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="9"   /> "
                <my:NxTextEdit  x:Name="txStartPage"     Prompt="Start Page:"    Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="10"   /> "
                <my:NxTextEdit  x:Name="txDrawPage"      Prompt="Draw Page:"     Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="11"   /> "
                <my:NxTextEdit  x:Name="txSponsorPage"   Prompt="Sponsor Page:"  Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="12"  /> "
                <my:NxTextEdit  x:Name="txSchedule"      Prompt="Schedule:"      Width="Auto" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Row="14"  Grid.RowSpan="3" PromptVerticalAlignment="Top"  /> "
                <my:NxButton    x:Name="btSchedule"      Prompt="Edit Scedule:"  Width="100"  HorizontalAlignment="Left"                         Grid.Row="14"     /> "

            </Grid>
        </ScrollViewer>
    </Grid>
       


</my:NxGroupBase>
