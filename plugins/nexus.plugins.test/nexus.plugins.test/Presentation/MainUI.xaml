<my:NxMainUIBase

      x:Class="nexus.plugins.floor.MainUI"
    
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:nexus.plugins.floor"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      xmlns:my="using:nexus.common.control" 
      Background="{ThemeResource BackgroundBrush}"


    >
    
  <ScrollViewer IsTabStop="True">

        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />   <!-- Left panel -->
                <ColumnDefinition Width="*"   />      <!-- Right panel -->
            </Grid.ColumnDefinitions>

            <my:NxTextEdit  x:Name="txDescription"   Prompt="Description:"   Width="Auto" PromptVerticalAlignment="Center" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Column="1" Grid.Row="0"   /> 
            <my:NxComboEdit x:Name="cbListType" Prompt="List Type:" Width="Auto"
                            ReplyVerticalAlignment="Center"
                            PromptVerticalAlignment="Center" HorizontalAlignment="Stretch" 
                            PromptWidth="110" Grid.Column="1" Grid.Row="1" 
                            DropType="List" LoadlistOnDemand="False" AutoDrop="True"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            List="Item1;Item2;Item3;Item4;Item5;Item6;Item7;Item8;Item9;Item10;Item11;Item12;Item13;Item14;Item15;Item16;Item17;Item18;Item19;Item20" />
            <my:NxComboEdit x:Name="cbDateType" Prompt="Date State:" Width="Auto" 
                            PromptVerticalAlignment="Center" HorizontalAlignment="Stretch" 
                            PromptWidth="110" Grid.Column="1" Grid.Row="2" 
                            DropType="Date" LoadlistOnDemand="False" AutoDrop="True"
                            ReplyVerticalAlignment="Center"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center" />
            <my:NxComboEdit x:Name="cbTimeType" Prompt="Time Type:" Width="Auto" 
                            PromptVerticalAlignment="Center" HorizontalAlignment="Stretch" 
                            PromptWidth="110" Grid.Column="1" Grid.Row="3" 
                            DropType="Time" LoadlistOnDemand="False" AutoDrop="True"
                            ReplyVerticalAlignment="Center"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center" /> 
            <my:NxCheck     x:Name="ckAutoDraw"      Prompt="CheckBox:"      Width="Auto" PromptVerticalAlignment="Center" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Column="1" Grid.Row="4"   /> 
            <my:NxTextEdit  x:Name="txAlpha"         Prompt="Alpha Only:"    Width="Auto" PromptVerticalAlignment="Center" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Column="1" Grid.Row="5" MaskType="AlphaOnly"   /> 
            <my:NxTextEdit  x:Name="txNumeric"       Prompt="Numeric Only:"  Width="Auto" PromptVerticalAlignment="Center" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Column="1" Grid.Row="6" MaskType="NumericOnly"   /> 
            <my:NxTextEdit  x:Name="txUpper"         Prompt="Uppercase:"     Width="Auto" PromptVerticalAlignment="Center" HorizontalAlignment="Stretch"  PromptWidth="110"   Grid.Column="1" Grid.Row="7" MaskType="AlphaUpperCase"   /> 
            <my:NxTextEdit  x:Name="txTitle"         Prompt="Titlecase:"
                            Width="Auto" PromptVerticalAlignment="Center"
                            HorizontalAlignment="Center"  PromptWidth="110"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Grid.Column="1" Grid.Row="8" MaskType="AlphaTitleCase"  /> 

        </Grid>

    </ScrollViewer>

</my:NxMainUIBase>
