<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nexus.common.control">

    <Style TargetType="local:NxMenu">
        <Setter Property="Background"      Value="{ThemeResource NxMenuBack}" />
        <Setter Property="BorderBrush"     Value="{ThemeResource NxMenuBorder}" />
        <Setter Property="BorderThickness" Value="1" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NxMenu">
                    <Border x:Name="OuterBorder"
                            Background      ="{TemplateBinding ButtonBack}"
                            BorderBrush     ="{TemplateBinding BorderBrush}"
                            BorderThickness ="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="4">
                        <StackPanel x:Name="Stacker" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
