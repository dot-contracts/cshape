<ResourceDictionary 
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nexus.common.control">

    <LinearGradientBrush x:Key="MouseOverBackground" EndPoint="0.991,0.49" StartPoint="0.008,0.497">
        <GradientStop Color="White"/>
        <GradientStop Color="#FFE0E0E0" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LostFocusBackground" EndPoint="0.991,0.49" StartPoint="0.008,0.497">
        <GradientStop Color="#FFC3C3C3"/>
        <GradientStop Color="#FFECECEC" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="InvalidBackground" EndPoint="0.9,0.021" StartPoint="-0.048,1.042">
        <GradientStop Color="#CCFF0000" Offset="0.043"/>
        <GradientStop Color="#00FF0000" Offset="0.494"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ValidBackground" EndPoint="0.9,0.021" StartPoint="-0.048,1.042">
        <GradientStop Color="#CC42FF00" Offset="0.043"/>
        <GradientStop Color="#001FFF00" Offset="0.494"/>
    </LinearGradientBrush>

    <Style TargetType="local:NxDateEdit">

        <Setter Property="Prompt"                     Value="Prompt"/>
        <Setter Property="PromptHorizontalAlignment"  Value="Left"/>
        <Setter Property="PromptVerticalAlignment"    Value="Top"/>
        <Setter Property="PromptFontFamily"           Value="Arial"/>
        <Setter Property="PromptFontSize"             Value="12"/>
        <Setter Property="PromptWidth"                Value="90"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NxDateEdit">
                    <Grid>
                        <Border x:Name="Border" Opacity="1" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="1" >
                            <Grid>
                                <StackPanel VerticalAlignment="Top" Width="Auto" Height="Auto" Orientation="Horizontal">

                                    <local:NxLabel  x:Name="label"         
                                                    PromptHorizontalAlignment ="{TemplateBinding PromptHorizontalAlignment}"
                                                    PromptVerticalAlignment   ="{TemplateBinding PromptVerticalAlignment}"
                                                    Prompt                    ="{TemplateBinding Prompt}"                               
                                                    PromptFontFamily          ="{TemplateBinding PromptFontFamily}"
                                                    PromptFontSize            ="{TemplateBinding PromptFontSize}"
                                                    Width                     ="{TemplateBinding PromptWidth}"        
                                                    Height                    ="Auto"   
                                    />

                                    <local:NxText   x:Name="editor" 
                                                    MaxTextLength               = "{TemplateBinding MaxTextLength}"
                                                    ReplyFontFamily             = "{TemplateBinding ReplyFontFamily}"
                                                    ReplyFontSize               = "{TemplateBinding ReplyFontSize}"
                                                    ReplyRequiredText           = "{TemplateBinding ReplyRequiredText}"
                                                    ReplyHorizontalAlignment    = "{TemplateBinding ReplyHorizontalAlignment}"
                                                    ReplyVerticalAlignment      = "{TemplateBinding ReplyVerticalAlignment}"                                                  
                                                    
                                                    MaskType                    = "{TemplateBinding MaskType}" 
                                                    Mask                        = "{TemplateBinding Mask}" 
                                                    IsReadOnly                  = "{TemplateBinding IsReadOnly}"
                                                    IsRequired                  = "{TemplateBinding IsRequired}"
                                                    ChangeEventType             = "{TemplateBinding ChangeEventType}" 
                                                    SuppressNavigate            = "{TemplateBinding SuppressNavigate}" 

                                                    TabIndex                    ="{TemplateBinding TabIndex}"
                                                    Height                      ="Auto"  
                                                    IsTabStop                   ="False"                                                      
                                    />


                                    <local:NxImage  x:Name    ="button"
                                                    Picture   ="calendar"  
                                                    ImageWidth     ="32"
                                    />


                                </StackPanel>
                            </Grid>
                        </Border>

                        <Popup Name="Popup"
                                     
                               IsOpen                       = "{TemplateBinding IsDropDownOpen}"
                               Width                        = "255"
                               Height                       = "200"
                            >
                               <Grid 
                                   Name                = "DropDown"  
                                   Width               = "255"
                                   Height              = "200"
                                   Background          = "Black" 
                                   HorizontalAlignment = "Right" 
                                >
                                    <Border 
                                        x:Name="DropDownBorder"
                                        BorderThickness = "1"
                                        BorderBrush     = "#888"
                                        Background          = "Black" 
                                        Width           = "255"
                                        Height          = "200"
                                     />
                                     <local:NxCalendar 
                                         x:Name="calendar" 
                                         Width  ="Auto" 
                                         Height ="Auto" 
                                         HorizontalAlignment="Right" 
                                        />

                                 </Grid>
                        </Popup>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
