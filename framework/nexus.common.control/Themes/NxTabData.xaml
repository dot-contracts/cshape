<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nexus.common.control"
    xmlns:themes="using:nexus.common.control.Themes">

    <Style TargetType="local:NxTabData">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NxTabData">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Data area -->
                        <StackPanel x:Name="PART_DataPanel"
                    Grid.Row="0"
                    Margin="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />

                        <!-- Paging -->
                        <StackPanel Grid.Row="1"
                             Orientation="Horizontal"
                             HorizontalAlignment="Right"
                             Margin="4">
                            <local:NxButton x:Name="PART_PrevPage" Prompt="Prev" Margin="4,0"/>
                            <local:NxButton x:Name="PART_NextPage" Prompt="Next" Margin="4,0"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
