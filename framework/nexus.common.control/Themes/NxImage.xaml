<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nexus.common.control">

    <Style TargetType="local:NxImage">

        <Setter Property="IsChecked"  Value="False"/>
        <Setter Property="IsReadonly" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NxImage">
                    <Grid x:Name="Root" Background="Transparent">

                        <Border x:Name="OuterBorder"
                                BorderBrush="{TemplateBinding Accent}"
                                BorderThickness="2"
                                CornerRadius="8"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">

                            <Image x:Name="Picture"
                                   RenderTransformOrigin="0.5,0.5"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Stretch="Uniform">

                                <Image.RenderTransform>
                                    <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1"/>
                                </Image.RenderTransform>

                            </Image>

                        </Border>

                        <VisualStateManager.VisualStateGroups>

                            <VisualStateGroup x:Name="CommonStates">

                                <VisualState x:Name="Normal"/>

                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="OuterBorder"
                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                            To="DodgerBlue"
                                            Duration="0:0:0.2"
                                            EnableDependentAnimation="True"/>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="ImageScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="0.9"
                                            Duration="0:0:0.1"
                                            EnableDependentAnimation="True"/>
                                        <DoubleAnimation
                                            Storyboard.TargetName="ImageScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="0.9"
                                            Duration="0:0:0.1"
                                            EnableDependentAnimation="True"/>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Disabled"/>

                            </VisualStateGroup>

                        </VisualStateManager.VisualStateGroups>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
